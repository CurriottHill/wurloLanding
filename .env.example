# Server Configuration
PORT=3000

# CORS Configuration (Allow requests from frontend domains)
CORS_ORIGIN=http://localhost:3000,https://wurlolanding.onrender.com,https://*.pages.dev

# Database Configuration
DB_HOST=postgresql://user:password@host:port/database

# JWT Secret for authentication (generate a random string)
JWT_SECRET=your-secret-jwt-key-here-replace-with-random-string

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Resend Email Configuration
RESEND_KEY=re_your_resend_api_key_here
RESEND_FROM=noreply@wurlo.org

# Firebase Configuration (Option 1: Individual fields)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"

# Firebase Configuration (Option 2: Full service account JSON)
# FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"..."}

# AI API Keys (for onboarding and placement tests)
GEMINI_API_KEY=your-gemini-api-key-here
XAI_API_KEY=your-xai-grok-api-key-here

# Puppeteer PDF Configuration (Production)
# No configuration needed - uses chromium npm package automatically
# Optional: Set custom path if not using npm chromium package
# PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium
# CHROME_BIN=/usr/bin/chromium

# Production URLs (optional, auto-detected based on NODE_ENV)
PRODUCTION_FRONTEND_URL=https://wurlo.org
PRODUCTION_BACKEND_URL=https://wurlolanding.onrender.com

# Development URLs (optional, defaults to localhost)
DEV_FRONTEND_BASE_URL=http://localhost:5173
DEV_BACKEND_BASE_URL=http://localhost:3000
